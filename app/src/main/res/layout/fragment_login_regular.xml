<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LoginRegular"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fontFamily="@font/firasans"
        android:text="Email"
        android:textColor="@color/purpleDark"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:backgroundTint="@color/purpleDark"
        android:drawableEnd="@drawable/ic_person_purple_dark"
        android:fontFamily="@font/firasans"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans"
        android:text="Password"
        android:textColor="@color/purpleDark"
        android:textSize="12sp" />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purpleDark"
        android:drawableEnd="@drawable/ic_lock_purple_dark"
        android:fontFamily="@font/firasans"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textColor="@android:color/black"
        android:textSize="14sp" />
</LinearLayout>